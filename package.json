{
  "name": "oh-my-notionmcp",
  "version": "1.0.0",
  "description": "Fast unified Notion MCP on macOS: local-cache-first reads, official fallback, official writes",
  "type": "module",
  "main": "bin/cli.mjs",
  "files": [
    "bin",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "SECURITY.md",
    "CONTRIBUTING.md",
    "CODE_OF_CONDUCT.md"
  ],
  "bin": {
    "oh-my-notionmcp": "bin/cli.mjs"
  },
  "scripts": {
    "build": "tsc --build && node scripts/build-cli.js",
    "dev": "tsx watch src/main.ts serve",
    "serve": "node bin/cli.mjs serve",
    "doctor": "node bin/cli.mjs doctor",
    "install:project": "node bin/cli.mjs install --project . --name notion",
    "login": "node bin/cli.mjs login",
    "test": "NODE_ENV=test vitest run",
    "test:watch": "NODE_ENV=test vitest",
    "test:coverage": "NODE_ENV=test vitest run --coverage",
    "lint": "eslint src/ test/",
    "format": "prettier --write 'src/**/*.ts' 'test/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "axios": "^1.8.4",
    "express": "^4.21.2",
    "form-data": "^4.0.1",
    "mcp-remote": "^0.1.38",
    "mustache": "^4.2.0",
    "node-fetch": "^3.3.2",
    "openapi-client-axios": "^7.5.5",
    "openapi-schema-validator": "^12.1.3",
    "openapi-types": "^12.1.3",
    "tsx": "^4.19.3",
    "which": "^5.0.0",
    "yargs": "^17.7.2",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@eslint/js": "^9.39.3",
    "@types/express": "^5.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema": "^7.0.15",
    "@types/mustache": "^4.2.5",
    "@types/node": "^20.17.16",
    "@types/which": "^3.0.4",
    "@vitest/coverage-v8": "^4.0.18",
    "esbuild": "^0.25.2",
    "eslint": "^9.39.3",
    "multer": "1.4.5-lts.1",
    "openai": "^4.91.1",
    "prettier": "^3.8.1",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.56.1",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "notion",
    "mcp",
    "oauth",
    "router",
    "cache",
    "sqlite"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/everything-chalna/oh-my-notionmcp.git"
  },
  "bugs": {
    "url": "https://github.com/everything-chalna/oh-my-notionmcp/issues"
  },
  "homepage": "https://github.com/everything-chalna/oh-my-notionmcp#readme"
}
